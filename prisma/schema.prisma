// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int    @id @default(autoincrement())
  name    String
  cpf     String @unique
  phone   String
  address String

  @@map("users")

}

model Order {
  id            Int      @id @default(autoincrement())
  dateTimeOrder DateTime @default(now())
  description   String
  price         Int

  @@map("orders")

}

model Menu {
  id    Int   @id @default(autoincrement())
  item String 
  name  String
  value Float

  @@map("menu")

}